{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "dist", 
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src", "tests"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}